{% extends "Theme/Users/User/layoutlogin.html.twig" %}
{% block meta %}
	{{ parent() }}
	<meta name="author" content="Sprint-pay"/>
	<meta name="description" content="{{ site }} - Connexion"/>
{% endblock %}

{% block title %}
	{{ parent() }} | Connexion
{% endblock %}

{% block userblog_body %}
<section class="h-100">
    <div class="container h-100">
        <div class="row justify-content-md-center h-100">
            <div class="card-wrapper">
                <div class="brand mb-4 text-center" style="padding: 20px; background-color: #2fa84b; color: #fff;">
                    <h5 class="mt-3">TabSon</h5>
                </div>                
                <div class="text-center mb-3 title-config-page">
                    Espace de configuration
                </div>
                <div class="card fat">
                    <div class="detail-config-page" style="background-color: #2fa84b;">
                        <div class="text-center" style="color: #fff;">
                            Connectez vous pour accéder à l’espace de configuration de l’intranet d’Orange Cameroun
                        </div>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class':'my-login-validation', 'action': path('users_user_inscription_user') }}) }}
                        <div class="text-left" style="margin: 20px 0px; font-size: 25px;"><strong>Créez un nouveau compte {{ site }}</strong></div>
                        {% for infos in app.session.flashbag.get('information') %}
                            {% if loop.last %}
                                <p class="center" style="color: red; padding: 7px; font-weight: bold;">{{ infos }}</p>
                            {% endif %}
                        {% endfor %}
                        <div>
                            <span style="color:red;">{{ form_errors(form) }}</span>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.nom, 'Rentrez votre nom') }}
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                            <div class="invalid-feedback">
                                Nom Invalide
                            </div>
                        </div>
                        <div>
                            <span style="color:red;">{{ form_errors(form.nom) }}</span>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.prenom, 'Rentrez votre prenom') }}
                            {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                            <div class="invalid-feedback">
                                Prenom Invalide
                            </div>
                        </div>
                        <div>
                            <span style="color:red;">{{ form_errors(form.prenom) }}</span>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.username, 'Rentrez votre username') }}
                            {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                            <div class="invalid-feedback">
                                Username Invalide
                            </div>
                        </div>
                        <div>
                            <span style="color:red;">{{ form_errors(form.password) }}</span>
                        </div>
                        <div class="form-group ocm-psw">
                            {{ form_label(form.password, 'Mot de passe') }}
                            {{ form_widget(form.password, {'attr': {'class': 'form-control', 'required':'', 'data-eye': ''}}) }}
                            <div class="invalid-feedback">
                                Mot de passe Invalide
                            </div>
                        </div>

                        <div class="form-group m-0 pt-4">
                            <button type="submit" class="login-button">
                                Se connecter
                            </button>
                        </div>
                        <div class="mt-4 text-center">
                            Vous avez oublié le mot de passe ? <a href="#!" class="ocm-color">Obtenir de l'aide</a>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
                <div class="footer">
                    Copyright &copy; {{ "now"|date('Y') }} &mdash; {{ site }}
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block javascripttemplate %}

{% endblock %}