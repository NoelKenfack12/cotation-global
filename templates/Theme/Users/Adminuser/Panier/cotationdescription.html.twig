{% extends "Theme/Users/Adminuser/layoutbaseorg.html.twig" %}
{% block meta %}
	{{ parent() }}
	<meta name="author" content="Sprint-pay"/>
	<meta name="description" content="{{ site }} - Connexion"/>
{% endblock %}

{% block title %}
	{{ parent() }} | Connexion
{% endblock %}

{% block userblog_body %}
<section class="container-fluid" style="padding-left: 0px; padding-right: 0px;">
    <section style="min-height: 98px; padding: 15px 50px; background: #1e4a8b; color: #fff; box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);">
        <div class="row">
            <div class="col-md-8">
                <h1>Enregistrement d'une nouvelle cotation</h1>
                <div>
                    <span class="bi bi-geo-alt"></span> Global - Buéa - Entrepot
                </div>
            </div>
        </div>
    </section>
</section>

<div class="container" style="min-height: calc(100vh - 150px);">
    <ul class="breadcrumb_" itemprop="breadcrumb_">
      <li><a href="#">Tableau de bord</a></li>
      <li><a href="#">Cotations</a></li>
      <li><h1>Nouvelle cotation</h1></li>
    </ul>

    <div class="mt-2 mb-2">
        <ul class="tabs-step">
            <li class="active">
                <a href="#">
                    <strong>Identification de l'opération</strong>
                    <div>re</div>
                </a>
            </li>
            <li class="active">
                <a href="#">
                    <strong>Description du contenu</strong>
                    <div>re</div>
                </a>
            </li>
            <li>
                <a href="#">
                    <strong>Cotation</strong>
                    <div>re</div>
                </a>
            </li>
        </ul>
    </div>

    <form action="{{ path('users_adminuser_tarification_cotation', {'id': 1}) }}" method="post">
    <div class="mb-3" style="background: #fff; padding: 20px; min-height: 400px;">
        <h3>Liste cotation</h3>
        <hr/>
        
        <div class="row">
            <div class="col-md-6">
                <label for="client-name">Pays d'origine</label>
                <select name="typeop" class="form-control input-lg" id="client-name">
                    <option value="">Cameroun</option>
                    <option value="">Usa</option>
                </select>
            </div>

            <div class="col-md-6">
                <label for="client-name">Pays de provenance</label>
                <select name="typeop" class="form-control input-lg" id="client-name">
                    <option value="">Cameroun</option>
                    <option value="">Usa</option>
                </select>
            </div>

            <div class="col-md-12 mt-4 mb-4">
                <div style="border: 1px dashed #999; background: #e8eff9; padding: 15px; border-radius: 10px;">
                    <h3>Attributs spécifiques</h3>
                    <div class="row">
                        <div class="col-md-4">
                            <label for="input-key">Poids</label>
                        </div>
                        <div class="col-md-8">
                            <input type="text" name="" id="input-key" class="form-control" placeholder="valeur"/>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-4">
                            <label for="input-key">Nombre de colis</label>
                        </div>
                        <div class="col-md-8">
                            <input type="text" name="" id="input-key" class="form-control" placeholder="valeur"/>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <label for="client-name">Observation</label>
                <textarea name="" id="" class="form-control input-lg" rows="10"></textarea>
            </div>

            <div class="col-md-12 mt-4 mb-4">
                <div style="border: 1px dashed #999; background: #e8eff9; padding: 15px; border-radius: 10px;">
                    <h3>À propos du client</h3>
                    <div class="row">
                        <div class="col-md-4">
                            <label for="input-key">Nom & prénom</label>
                        </div>
                        <div class="col-md-8">
                            <input type="text" name="" id="input-key" class="form-control" placeholder="valeur"/>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-4">
                            <label for="input-key">Téléphone</label>
                        </div>
                        <div class="col-md-8">
                            <input type="text" name="" id="input-key" class="form-control" placeholder="valeur"/>
                        </div>
                    </div>
                </div>
            </div>


        </div>

    </div>

    <div class="mt-3 text-right " style="background: #fff; padding: 20px;">
        <a href="{{ path('users_adminuser_nouvelle_cotation', {'id': 1}) }}" class="btn btn-primary" style="float: left;">
            <span class="bi bi-arrow-return-left"></span> Etape précedente
        </a>
        <button type="submit" class="btn btn-primary">
            Enregistrer et continuer <span class="bi bi-arrow-return-right"></span>
        </button>
    </div>

</form>

</div>
<!-- content-wrapper ends -->

  
{% endblock %}

